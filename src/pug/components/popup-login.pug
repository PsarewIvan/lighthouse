include ../icons/icon-cross.pug
include ../components/button.pug
include ../components/text-input.pug

mixin popup-login()
    .popup-auth.hidden.js-popup-login
        .popup-auth__box
            .popup-auth__header
                button.popup-auth__button.js-close-popup(type="button")
                    +icon-cross('popup-auth__icon')
            .popup-auth__content
                .popup-auth__content-title Подключиться бесплатно
                .popup-auth__content-text Укажите ваш номер телефона и мы свяжемся с Вами в ближайшее время
                form.popup-auth__form(action="")
                    +text-input('', '', 'Телефон для связи', '', 'popup-auth__form-email')
                    +text-input('', '', 'Название организации', '', 'popup-auth__form-email')
                    +button('Отправить', 'm', 'primary', 'popup-auth__apply-login-button js-success-button')
                    img.popup-auth__captcha(src='images/captcha.png')


