include ../icons/icon-cross.pug
include ../components/button.pug
include ../components/text-input.pug

mixin popup-forgot-pass()
    .popup-auth.hidden.js-popup-forgot-pass
        .popup-auth__box
            .popup-auth__header
                button.popup-auth__button.js-close-popup(type="button")
                    +icon-cross('popup-auth__icon')
            .popup-auth__content
                .popup-auth__content-title Забыли пароль?
                .popup-auth__content-text Введите адрес электронной почты привязанный к вашей учетной записи, и мы вышлем вам пароль
                form.popup-auth__form(action="")
                    +text-input('', 'Не указан адрес электронной почты', 'Электронная почта', '', 'popup-auth__forgot-email')
                    +button('Отправить', 'm', 'primary', 'popup-auth__apply-forgot-button')
                    img.popup-auth__captcha(src='images/captcha.png')
                .popup-auth__login
                    span Не зарегистрированы?
                    button.popup-auth__login-button.js-login-button(type='button') Подключитесь

