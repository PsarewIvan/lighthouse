include ../icons/icon-cross.pug

mixin text-input(label, alert, placeholder='', value='', className='')
    .text-input.js-text-input-node(class=className)
        if label
            .text-input__label= label
        .text-input__input-wrapper
            input.text-input__input.js-text-input(type="text" placeholder=placeholder value=value)
            button.text-input__reset.js-text-input-reset(type="button")
                +icon-cross('text-input__icon')
        if alert
            .text-input__alert.js-text-input-alert= alert
