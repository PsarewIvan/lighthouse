include ../icons/icon-cross.pug
include ../components/button.pug
include ../components/text-input.pug
include ../components/pass-input.pug
include ../components/checkbox.pug

mixin popup-auth()
    .popup-auth.hidden.js-popup-auth
        .popup-auth__box
            .popup-auth__header
                button.popup-auth__button.js-close-popup(type="button")
                    +icon-cross('popup-auth__icon')
            .popup-auth__content
                .popup-auth__content-title Вход в личный кабинет
                form.popup-auth__form(action="")
                    +text-input('', 'Не указан адрес электронной почты', 'Электронная почта', '', 'popup-auth__form-email')
                    +pass-input('', 'Не указан пароль', 'Пароль', 'popup-auth__form-pass')
                    button.popup-auth__button-link.js-auth-button-forgot(type='button') Забыли пароль?
                    +checkbox('popup-auth__checkbox')
                    img.popup-auth__captcha(src='images/captcha.png')
                    +button('Войти', 'm', 'primary', 'popup-auth__apply-button')
                .popup-auth__login
                    span Не зарегистрированы?
                    button.popup-auth__login-button.js-login-button(type='button') Подключитесь

